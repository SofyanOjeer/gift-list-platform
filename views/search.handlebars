<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-search me-2"></i>Rechercher un profil</h4>
            </div>
            <div class="card-body">
                <form action="/search/profile" method="GET" class="mb-4">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control form-control-lg" 
                               placeholder="Nom d'utilisateur ou email" 
                               value="{{query}}"
                               required>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                    </div>
                </form>

                {{#if results.length}}
                    <h5>Résultats de la recherche ({{results.length}})</h5>
                    {{#each results}}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">{{this.username}}</h6>
                                        <p class="text-muted mb-1">{{this.email}}</p>
                                        <small class="text-muted">
                                            {{this.first_name}} {{this.last_name}}
                                        </small>
                                    </div>
                                    <div>
                                        <a href="/profile/{{this.username}}" class="btn btn-primary btn-sm">
                                            <i class="fas fa-user me-1"></i>Voir le profil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else if query}}
                    <div class="text-center py-4">
                        <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun utilisateur trouvé</h5>
                        <p class="text-muted">Aucun utilisateur ne correspond à "{{query}}"</p>
                    </div>
                {{else}}
                    <div class="text-center py-4">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Rechercher des utilisateurs</h5>
                        <p class="text-muted">
                            Entrez un nom d'utilisateur ou une adresse email pour découvrir des listes publiques
                        </p>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>