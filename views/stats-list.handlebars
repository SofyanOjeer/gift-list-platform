<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Statistiques - {{list.name}}</h1>
        <p class="text-muted">{{list.description}}</p>
    </div>
    <a href="/lists/{{list.id}}" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-center stats-card primary">
            <div class="card-body">
                <div class="number">{{stats.views}}</div>
                <div class="text-muted">Vues</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center stats-card success">
            <div class="card-body">
                <div class="number">{{stats.followers}}</div>
                <div class="text-muted">Abonnés</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center stats-card warning">
            <div class="card-body">
                <div class="number">{{stats.reservationRate}}%</div>
                <div class="text-muted">Taux de réservation</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center stats-card info">
            <div class="card-body">
                <div class="number">{{formatPrice stats.totalValue}}</div>
                <div class="text-muted">Valeur totale</div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Détails des réservations</h5>
            </div>
            <div class="card-body">
                <p><strong>Articles totaux:</strong> {{stats.totalItems}}</p>
                <p><strong>Articles réservés:</strong> {{stats.reservedItems}}</p>
                <p><strong>Taux de réservation:</strong> {{stats.reservationRate}}%</p>
                <p><strong>Valeur totale:</strong> {{formatPrice stats.totalValue}}</p>
                <p><strong>Valeur réservée:</strong> {{formatPrice stats.reservedValue}}</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-fire me-2"></i>Articles les plus populaires</h5>
            </div>
            <div class="card-body">
                {{#if stats.popularItems.length}}
                    {{#each stats.popularItems}}
                        <div class="d-flex justify-content-between align-items-center mb-2 p-2 border-bottom">
                            <div>
                                <strong>{{this.name}}</strong>
                                <br>
                                <small class="text-muted">{{this.reserved_quantity}}/{{this.quantity}} réservé(s)</small>
                            </div>
                            <span class="badge bg-success">{{formatPrice this.price}}</span>
                        </div>
                    {{/each}}
                {{else}}
                    <p class="text-muted text-center py-3">Aucun article réservé pour le moment</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informations de la liste</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Nom:</strong> {{list.name}}</p>
                <p><strong>Description:</strong> {{list.description}}</p>
                <p><strong>Visibilité:</strong> 
                    {{#if (eq list.visibility 'public')}}Public{{/if}}
                    {{#if (eq list.visibility 'private')}}Privé{{/if}}
                    {{#if (eq list.visibility 'unlisted')}}Non listé{{/if}}
                </p>
            </div>
            <div class="col-md-6">
                <p><strong>Prix affichés:</strong> {{#if list.show_prices}}Oui{{else}}Non{{/if}}</p>
                <p><strong>Commentaires autorisés:</strong> {{#if list.allow_comments}}Oui{{else}}Non{{/if}}</p>
                <p><strong>Articles réservés masqués:</strong> {{#if list.hide_reserved_items}}Oui{{else}}Non{{/if}}</p>
                <p><strong>Délai de confirmation:</strong> {{list.confirmation_delay}} jours</p>
            </div>
        </div>
    </div>
</div>